{
  "name": "envia",
  "version": "0.1.0",
  "description": "A modern mail merge application",
  "author": "Pablo",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "electron:dev": "concurrently \"next dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "next build && node scripts/move-files.js && electron-builder",
    "dist:win": "electron-builder --win"
  },
  "build": {
    "appId": "com.envia.app",
    "productName": "Envia",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": ".next/standalone",
        "to": "app-server",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "public",
        "to": "app-server/public"
      },
      {
        "from": ".next/static",
        "to": "app-server/.next/static"
      }
    ],
    "win": {
      "target": [
        "portable",
        "msi"
      ],
      "icon": "public/favicon.ico"
    },
    "portable": {
      "artifactName": "${productName}-Portable-${version}.${ext}"
    },
    "msi": {
      "perMachine": true,
      "oneClick": false
    }
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tiptap/extension-link": "^3.13.0",
    "@tiptap/react": "^3.13.0",
    "@tiptap/starter-kit": "^3.13.0",
    "@types/papaparse": "^5.5.1",
    "autoprefixer": "^10.4.22",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.25",
    "lucide-react": "^0.556.0",
    "next": "^16.0.8",
    "nodemailer": "^7.0.11",
    "papaparse": "^5.5.3",
    "portfinder": "^1.0.38",
    "react": "^18",
    "react-dom": "^18",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "xlsx": "https://cdn.sheetjs.com/xlsx-0.20.3/xlsx-0.20.3.tgz"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/nodemailer": "^7.0.4",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "eslint": "^8",
    "eslint-config-next": "^16.0.8",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "wait-on": "^9.0.3"
  }
}